{
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES2015",
      "allowJs": false,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "outDir": "lib",
      "alwaysStrict": true,
      "types": ["mocha", "node"],
      "allowSyntheticDefaultImports": true,
      "typeRoots": [ "./@types", "node_modules/@types" ],
      "esModuleInterop": true
  },
  "include": [
      "./src/",
      "./@types"
  ]
}