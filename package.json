{
  "name": "tapper-api",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Nathan Taylor",
  "main": "lib/main.js",
  "repository": "git@github.com:naterious/tapper-api.git",
  "scripts": {
    "start": "node lib/main.js",
    "start:dev": "ts-node-dev --respawn --transpileOnly src/main.ts",
    "lint": "yarn lint:ts && yarn lint:yaml && yarn lint:markdown && yarn lint:package",
    "lint:ts": "eslint -c ./eslint-config/index.js 'src/**/*.ts' --ignore-pattern 'src/**/*.test.ts'",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:test": "eslint -c ./eslint-config/tests.js 'src/**/*.test.ts'",
    "lint:test:fix": "yarn lint:test --fix",
    "lint:yaml": "eslint -c ./eslint-config/yaml.js '**/*.yaml'",
    "lint:markdown": "remark -r './eslint-config/.remarkrc' readMe.md",
    "lint:package": "pjl-cli -c ./eslint-config/.npmpackagejsonlintrc",
    "test": "cross-env NODE_ENV=test NODE_CONFIG_DIR=environments nyc mocha -- src/**/*.test.ts",
    "type": "tsc",
    "type:coverage": "yarn type-coverage --detail true",
    "build": "babel ./src --out-dir lib --extensions '.ts'",
    "createDb": "node scripts/createDb.js",
    "dropDb": "node scripts/dropDb.js",
    "docker:mongo": "mkdir -p data && docker run -d -p 27017:27017 -v data:/data/db mongo",
    "prepush": "yarn lint && yarn type && yarn test"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cheerio": "^0.22.11",
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/is-empty": "^1.2.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.7",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/ramda": "^0.26.12",
    "@types/request-promise": "^4.1.44",
    "@types/uuid": "^3.4.5",
    "@types/validator": "^10.11.1",
    "assert": "^2.0.0",
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.3",
    "config": "^1.26.2",
    "cors": "^2.8.3",
    "es6-error": "^4.0.2",
    "express": "^4.15.4",
    "fluture": "^9.0.2",
    "is-empty": "^1.2.0",
    "joi": "^10.6.0",
    "js-yaml": "^3.10.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.7",
    "mongoose": "^5.6.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ramda": "^0.25.0",
    "ramda-fantasy": "^0.8.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.4",
    "ts-node": "^8.3.0",
    "ulid": "^2.3.0",
    "uuid": "^3.3.2",
    "validator": "^11.0.0",
    "winston": "^2.4.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@freeletics/remark-lint-blank-lines": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-watch": "^2.0.7",
    "chai": "^4.1.2",
    "cross-env": "^5.1.1",
    "eslint": "^6.0.1",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-yaml": "pdehaan/eslint-plugin-yaml",
    "husky": "^0.14.3",
    "jrgen": "^1.3.0",
    "lerna": "^2.1.2",
    "minimist": "^1.2.0",
    "mocha": "^5.0.5",
    "mock-require": "^2.0.2",
    "nodemon": "^1.11.0",
    "npm-package-json-lint": "^2.11.0",
    "npm-package-json-lint-config-default": "^1.1.0",
    "nyc": "^11.3.0",
    "remark-cli": "^4.0.0",
    "remark-lint": "^6.0.1",
    "remark-lint-code-block-style": "^1.0.1",
    "remark-lint-first-heading-level": "^1.1.1",
    "remark-lint-heading-increment": "^1.0.1",
    "remark-lint-list-item-indent": "^1.0.1",
    "remark-lint-no-consecutive-blank-lines": "^1.0.1",
    "remark-lint-no-empty-sections": "^2.0.0",
    "remark-lint-no-paragraph-content-indent": "^1.0.3",
    "remark-lint-no-trailing-spaces": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "sinon": "^4.1.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "type-coverage": "^2.0.4",
    "typescript": "^3.5.2"
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "exclude": [
      "__tests__"
    ],
    "reporter": [
      "html"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
