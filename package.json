{
  "name": "trivia-tapper-api",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Nathan Taylor",
  "main": "lib/main.js",
  "repository": "git@github.com:naterious/trivia-tapper-api.git",
  "scripts": {
    "start": "node lib/main.js",
    "start:dev": "babel-watch src/main.js",
    "lint": "yarn lint:js && yarn lint:test && yarn lint:yaml && yarn lint:markdown && yarn lint:package",
    "lint:js": "eslint -c ./eslint-config/index.js 'src/**/*.js' --ignore-pattern 'src/**/*.test.js' --ignore-pattern 'src/**/*.int.js' --ignore-pattern 'src/**/*.e2e.js' --ignore-pattern 'src/**/flow-typed/**/*.*'",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:test": "eslint -c ./eslint-config/tests.js 'src/**/*.test.js' 'src/**/*.int.js' 'src/**/*.e2e.js'  ",
    "lint:test:fix": "yarn lint:test --fix",
    "lint:yaml": "eslint -c ./eslint-config/yaml.js '**/*.yaml'",
    "lint:markdown": "remark -r './eslint-config/.remarkrc' readMe.md",
    "lint:package": "pjl-cli -c ./eslint-config/.npmpackagejsonlintrc",
    "test": "cross-env NODE_ENV=test NODE_CONFIG_DIR=environments nyc mocha -- src/**/*.test.js",
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -x 'src/**/*.test.js' -x 'src/**/*.int.js' -x 'src/**/*.e2e.js' ",
    "build": "babel src -d lib",
    "createDb": "node scripts/createDb.js",
    "dropDb": "node scripts/dropDb.js",
    "docker:mongo": "mkdir -p data && docker run -d -p 27017:27017 -v data:/data/db mongo",
    "prepush": "yarn lint && yarn flow && yarn test"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "cheerio": "^1.0.0-rc.3",
    "config": "^1.26.2",
    "cors": "^2.8.3",
    "es6-error": "^4.0.2",
    "express": "^4.15.4",
    "flow-coverage-report": "^0.5.0",
    "flow-typed": "^2.5.2",
    "fluture": "^9.0.2",
    "is-empty": "^1.2.0",
    "joi": "^10.6.0",
    "js-yaml": "^3.10.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.2.7",
    "mongoose": "^5.6.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "ramda": "^0.25.0",
    "ramda-fantasy": "^0.8.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.4",
    "ulid": "^2.3.0",
    "uuid": "^3.3.2",
    "validator": "^11.0.0",
    "winston": "^2.4.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@freeletics/remark-lint-blank-lines": "^3.0.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "chai": "^4.1.2",
    "cross-env": "^5.1.1",
    "eslint": "^4.10.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-yaml": "pdehaan/eslint-plugin-yaml",
    "flow-bin": "^0.55.0",
    "husky": "^0.14.3",
    "jrgen": "^1.3.0",
    "lerna": "^2.1.2",
    "minimist": "^1.2.0",
    "mocha": "^5.0.5",
    "mock-require": "^2.0.2",
    "nodemon": "^1.11.0",
    "npm-package-json-lint": "^2.11.0",
    "npm-package-json-lint-config-default": "^1.1.0",
    "nyc": "^11.3.0",
    "remark-cli": "^4.0.0",
    "remark-lint": "^6.0.1",
    "remark-lint-code-block-style": "^1.0.1",
    "remark-lint-first-heading-level": "^1.1.1",
    "remark-lint-heading-increment": "^1.0.1",
    "remark-lint-list-item-indent": "^1.0.1",
    "remark-lint-no-consecutive-blank-lines": "^1.0.1",
    "remark-lint-no-empty-sections": "^2.0.0",
    "remark-lint-no-paragraph-content-indent": "^1.0.3",
    "remark-lint-no-trailing-spaces": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "sinon": "^4.1.2"
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "exclude": [
      "__tests__"
    ],
    "reporter": [
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
